# ===================================
# Phoenix Configuration
# ===================================
PHX_HOST=your-domain.com
SECRET_KEY_BASE=generate_with_mix_phx.gen.secret
CLOAK_KEY=generate_with_openssl_rand_base64_32

# Port (internal container port, not exposed directly)
PORT=4000

# ===================================
# Database Configuration
# ===================================
POSTGRES_DB=roda_prod
POSTGRES_USER=roda
POSTGRES_PASSWORD=generate_strong_password_here
POSTGRES_PORT=5432

# Full database URL for Phoenix
# Format: ecto://USER:PASS@HOST/DATABASE
DATABASE_URL=ecto://roda:generate_strong_password_here@postgres:5432/roda_prod

# Connection pool size (adjust based on your load)
POOL_SIZE=10

# ===================================
# MinIO Configuration
# ===================================
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=generate_strong_password_here
MINIO_HOST=minio
MINIO_PORT=9000

# ===================================
# Memgraph Configuration
# ===================================
MEMGRAPH_USER=memgraph
MEMGRAPH_PASSWORD=generate_strong_password_here
MEMGRAPH_HOST=memgraph
MEMGRAPH_PORT=7687

# ===================================
# Traefik / ACME (Let's Encrypt)
# ===================================
ACME_EMAIL=your-email@example.com

# ===================================
# Bootstrap Configuration (Seeds)
# ===================================
# These variables are used by priv/repo/seeds.exs to create the initial
# organization and admin user on first deployment
INITIAL_ORG_NAME=Your Organization
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=generate_strong_password_here

# ===================================
# Optional Configuration
# ===================================
# DNS_CLUSTER_QUERY=
# ECTO_IPV6=false
